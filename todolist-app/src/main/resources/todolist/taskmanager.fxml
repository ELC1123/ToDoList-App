<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="todolist.TaskManager">
   <!-- Add padding -->
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <Label text = "To-Do List Manager" style = "-fx-font-size: 18px; -fx-font-weight: bold;"/>

   <!-- Input Fields -->
   <TextField fx:id = "titleField" promptText = "Enter Title of Task" maxWidth = "300"/>
   <TextField fx:id = "descriptionField" promptText = "Enter Description of Task" maxWidth = "300"/>
   <ComboBox fx:id = "priorityBox" promptText = "Set Priority" maxWidth = "300"/>
   <DatePicker fx:id = "dueDatePicker" promptText = "Set Deadline" maxWidth = "300"/>

   <!-- Buttons -->
   <HBox spacing = "10" alignment = "CENTER">
      <Button fx:id = "addButton" text = "Add Task" onAction = "#addTask"/>
      <Button text = "Mark Complete" onAction = "#markComplete"/>
      <Button text = "Delete Task" onAction = "#deleteTask"/>
   </HBox>

   <!-- Task View -->
   <ListView fx:id = "taskListView" prefHeight = "250" maxWidth = "400"/>

</VBox>
